@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Slider Title</label>
                <input asp-for="Title" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Slider Description</label>
                <textarea asp-for="Description" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputCategoryName">Slider Image</label>
                <input asp-for="Image"  class="form-control" maxlength="100">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
