@model InstructorCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label class="mt-5" for="category">FullName</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input asp-for="FullName" class="form-control form-bg-light" maxlength="100" placeholder="FullName...">
            </div>
            <div class="form-group">
                <label class="mt-5" for="category">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control form-bg-light" maxlength="100" placeholder="Email...">
            </div>
            <div class="form-group">
                <label class="mt-5" for="category">Designation</label>
                <span asp-validation-for="Designation" class="text-danger"></span>
                <input asp-for="Designation" class="form-control form-bg-light" maxlength="100" placeholder="Designation...">
            </div>
            <div class="form-group">
                <label for="category">Image</label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input class="form-control form-bg-light" type="file" asp-for="Image" maxlength="100" placeholder="Category...">
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
