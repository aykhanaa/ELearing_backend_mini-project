
@model CourseCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" id="name" placeholder="Name..">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input asp-for="Price" type="number" step="any" class="form-control" id="price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="price">Discount Price</label>
                <input asp-for="DiscountPrice" type="number" step="any" class="form-control" id="price">
                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="images">Upload Images</label>
                <input asp-for="Images" accept="image/*" class="form-control" id="images">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-form-label">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>


